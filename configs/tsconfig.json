// Use this in your tsconfig.json:
// "extends": "@tksst/typescript-starter/tsconfig.json"
//
// "compilerOptions.outDir" and "include" may need to be set.
{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Modules
    "module": "ES2022",
    "moduleResolution": "Node16",

    // Emit
    "sourceMap": true,

    // Language and Environment
    // >= 14       ES2020
    // >= 16       ES2021
    // >= 17       ES2022
    "target": "ES2020",
    "lib": ["ES2020"],

    // Interop Constraints
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,

    // Completeness
    "skipLibCheck": true
  }
}
